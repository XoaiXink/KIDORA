@model KIDORA.Data.CamNang

@{
    ViewData["Title"] = "Chi Tiết Bài Cẩm Nang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-4">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumb-dash mb-4" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="AdminCamNangs" asp-action="Index">
                            Quản lý Cẩm Nang
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Chi tiết
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-dark">Chi Tiết Bài Cẩm Nang</h1>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary">
            <h5 class="mb-0 text-white">
                <i class="fas fa-edit me-2 text-white"></i>
                Chi tiết bài: @Model.TieuDe
            </h5>
        </div>

        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Ảnh bài viết:</dt>
                        <img src="~/AnhCamNang/@Model.Anh" alt="Ảnh Cẩm Nang" class="img-fluid rounded" style="max-height:250px; object-fit:cover;" />
                    </div>
                </li>
                <!-- Thông tin cơ bản -->
                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Tiêu đề:</dt>
                        <dd class="col-md-9">@Model?.TieuDe</dd>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Tác giả:</dt>
                        <dd class="col-md-9">@Model?.TacGia</dd>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Ngày đăng:</dt>
                        <dd class="col-md-9">@Model?.NgayDang.ToString("dd/MM/yyyy")</dd>
                    </div>
                </li>

                <!-- Tóm tắt -->
                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Tóm Tắt:</dt>
                        <dd class="col-md-9">@Html.Raw(Model?.TomTat)</dd>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <dt class="col-md-3 fw-bold">Nội Dung:</dt>
                        <dd class="col-md-9"> @Html.Raw(Model?.NoiDung)</dd>
                    </div>
                </li>

            </ul>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model?.MaBai" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
