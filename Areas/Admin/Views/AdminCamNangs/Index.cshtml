@model IEnumerable<KIDORA.Data.CamNang>

@{
    ViewData["Title"] = "Danh sách Cẩm Nang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Danh sách cẩm nang</li>
        </ol>
    </nav>
}

<div class="container-fluid my-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 text-dark mb-0">Danh sách Cẩm Nang</h1>
        <a class="btn btn-success" asp-action="Create">
            <i class="fa fa-plus"></i> Tạo mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center" style="width:50px;">#</th>
                            <th>Tiêu đề</th>
                            <th style="width:90px;">Ảnh</th>
                            <th>Ngày đăng</th>
                            <th>Tác giả</th>
                            <th>Tóm tắt</th>
                            <th class="text-center" style="width:160px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center fw-semibold">@stt</td>
                                    <td class="fw-bold">@item.TieuDe</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Anh))
                                        {
                                            <img src="~/AnhCamNang/@item.Anh"
                                                 style="width:60px;height:60px;object-fit:cover;border-radius:8px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không ảnh</span>
                                        }
                                    </td>
                                    <td>@item.NgayDang.ToString("dd/MM/yyyy")</td>
                                    <td>@item.TacGia</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TomTat))
                                        {
                                            @(item.TomTat.Length > 80 ? item.TomTat.Substring(0, 80) + "..." : item.TomTat)
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-controller="AdminCamNangs" asp-area="Admin" asp-route-id="@item.MaBai"
                                               class="btn btn-outline-primary"
                                               title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <a asp-action="Details" asp-controller="AdminCamNangs" asp-area="Admin" asp-route-id="@item.MaBai"
                                               class="btn btn-outline-info"
                                               title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-controller="AdminCamNangs" asp-area="Admin" asp-route-id="@item.MaBai"
                                               class="btn btn-outline-danger"
                                               title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="fa fa-inbox fa-2x mb-2"></i>
                                    <div>Không có dữ liệu</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
