@model KIDORA.Data.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-danger">Xóa sản phẩm</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <!-- CẢNH BÁO -->
    <div class="alert alert-warning text-dark" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i> Cảnh báo
        </h4>
        <p class="mb-0">
            Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> sản phẩm này không?
            Hành động này <strong>không thể hoàn tác</strong>.
        </p>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">

                <!-- ẢNH SẢN PHẨM -->
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.AnhChinh))
                    {
                        <img src="~/Anh/@Model.AnhChinh"
                             alt="@Model.TenSp"
                             class="img-fluid rounded shadow" />
                    }
                    else
                    {
                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                             style="height:300px;">
                            <span class="text-muted">Chưa có ảnh</span>
                        </div>
                    }
                </div>

                <!-- THÔNG TIN -->
                <div class="col-md-8">
                    <dl class="row">

                        <dt class="col-sm-4">Mã sản phẩm</dt>
                        <dd class="col-sm-8">@Model.MaSp</dd>

                        <dt class="col-sm-4">SKU</dt>
                        <dd class="col-sm-8">@Model.Sku</dd>

                        <dt class="col-sm-4">Tên sản phẩm</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.TenSp</strong>
                        </dd>

                        <dt class="col-sm-4">Danh mục</dt>
                        <dd class="col-sm-8">
                            @Model.MaDanhMucNavigation?.TenDanhMuc
                        </dd>

                        <dt class="col-sm-4">Nhà cung cấp</dt>
                        <dd class="col-sm-8">
                            @Model.MaNccNavigation?.TenNcc
                        </dd>

                        <dt class="col-sm-4">Giá bán</dt>
                        <dd class="col-sm-8">
                            <strong class="text-success">
                                @Model.DonGiaBan.ToString("N0") đ
                            </strong>
                        </dd>

                        <dt class="col-sm-4">Giá niêm yết</dt>
                        <dd class="col-sm-8">
                            <del class="text-muted">
                                @Model.GiaNiemYet.ToString("N0") đ
                            </del>
                        </dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            @{
                                var badgeClass = Model.DangBan ? "bg-success" : "bg-danger";
                                var badgeText = Model.DangBan ? "Đang bán" : "Ngừng bán";
                            }
                            <span class="badge @badgeClass p-2">@badgeText</span>
                        </dd>

                    </dl>
                </div>
            </div>

            <hr />

            <!-- FORM XÁC NHẬN -->
            <form asp-action="Delete" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MaSp" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Hủy
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>
