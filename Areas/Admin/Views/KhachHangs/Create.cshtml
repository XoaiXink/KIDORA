@model KIDORA.Data.KhachHang

@{
    ViewData["Title"] = "Thêm khách hàng mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Thêm khách hàng mới</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <!-- Cột trái: Thông tin tài khoản -->
                <div class="col-md-6 border-end">
                    <h5 class="mb-3 fw-bold">Thông tin tài khoản</h5>

                    <div class="mb-3">
                        <label class="form-label">Mã khách hàng</label>
                        <p class="form-control-plaintext text-muted">
                            Sẽ được hệ thống tự tạo sau khi lưu
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Họ tên</label>
                        <input asp-for="MaKhNavigation.HoTen" class="form-control" />
                        <span asp-validation-for="MaKhNavigation.HoTen" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="MaKhNavigation.Email" class="form-control" />
                        <span asp-validation-for="MaKhNavigation.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Điện thoại</label>
                        <input asp-for="MaKhNavigation.DienThoai" class="form-control" />
                        <span asp-validation-for="MaKhNavigation.DienThoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Giới tính</label>
                        <input asp-for="MaKhNavigation.GioiTinh" class="form-control"
                               placeholder="Nam / Nữ / Khác" />
                        <span asp-validation-for="MaKhNavigation.GioiTinh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ngày sinh</label>
                        <input asp-for="MaKhNavigation.NgaySinh" class="form-control" type="date" />
                        <span asp-validation-for="MaKhNavigation.NgaySinh" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cột phải: Thông tin thành viên -->
                <div class="col-md-6">
                    <h5 class="mb-3 fw-bold">Thông tin thành viên</h5>

                    <div class="mb-3">
                        <label asp-for="MaHang" class="form-label">Hạng thành viên</label>
                        <select asp-for="MaHang" class="form-select" asp-items="ViewBag.MaHang"></select>
                        <span asp-validation-for="MaHang" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoDuKcoin" class="form-label">Số dư K-Coin ban đầu</label>
                        <input asp-for="SoDuKcoin" class="form-control" />
                        <span asp-validation-for="SoDuKcoin" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NgayThamGia" class="form-label">Ngày tham gia</label>
                        <input asp-for="NgayThamGia" class="form-control" type="datetime-local" />
                        <span asp-validation-for="NgayThamGia" class="text-danger"></span>
                    </div>

                    <p class="text-muted small">
                        Lưu ý: Việc thiết lập hạng thành viên và số dư K-Coin ban đầu
                        có thể ảnh hưởng đến quyền lợi của khách hàng.
                    </p>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                <button type="submit" class="btn btn-primary">Lưu khách hàng</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
