@model IEnumerable<KIDORA.Data.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var searchString = ViewBag.SearchString as string;
    var hang = ViewBag.Hang as string;
    var emailStatus = ViewBag.EmailStatus as string;
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-dark mb-0">Quản lý khách hàng</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm khách hàng mới
        </a>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Tìm kiếm</label>
                    <input type="text"
                           name="searchString"
                           value="@searchString"
                           class="form-control"
                           placeholder="Tìm theo mã KH, họ tên, email hoặc SĐT" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Hạng thành viên</label>
                    <select name="hang" class="form-select">
                        <option value="all" selected="@(hang == null || hang == "all" ? "selected" : null)">
                            Tất cả hạng
                        </option>

                        @foreach (SelectListItem item in ViewBag.HangList)
                        {
                            <option value="@item.Value"
                                    selected="@(item.Value == hang ? "selected" : null)">
                                @item.Text (@item.Value)
                            </option>
                        }

                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Trạng thái email</label>
                    @{
                        var selAll = (emailStatus == "all" || emailStatus == null) ? "selected" : "";
                        var selConfirmed = (emailStatus == "confirmed") ? "selected" : "";
                        var selUnconfirmed = (emailStatus == "unconfirmed") ? "selected" : "";
                    }
                    <select name="emailStatus" class="form-select">
                        <option value="all" selected="@(emailStatus == null || emailStatus == "all" ? "selected" : null)">
                            Tất cả
                        </option>
                        <option value="confirmed" selected="@(emailStatus == "confirmed" ? "selected" : null)">
                            Đã xác thực
                        </option>
                        <option value="unconfirmed" selected="@(emailStatus == "unconfirmed" ? "selected" : null)">
                            Chưa xác thực
                        </option>
                    </select>

                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Lọc
                    </button>
                    <a href="@Url.Action("Index", "KhachHangs", new { area = "Admin" })"
                       class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times"></i> Xóa lọc
                    </a>
                </div>
            </form>

            @if (!string.IsNullOrWhiteSpace(searchString) || !string.IsNullOrWhiteSpace(hang) && hang != "all" || !string.IsNullOrWhiteSpace(emailStatus) && emailStatus != "all")
            {
                <div class="mt-3 text-muted small d-flex flex-wrap align-items-center gap-2">
                    <span class="fw-semibold text-dark">Bộ lọc:</span>
                    @if (!string.IsNullOrWhiteSpace(searchString))
                    {
                        <span class="badge bg-light text-dark border">Từ khóa: "@searchString"</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(hang) && hang != "all")
                    {
                        <span class="badge bg-light text-dark border">Hạng: @hang</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(emailStatus) && emailStatus != "all")
                    {
                        <span class="badge bg-light text-dark border">Email: @(emailStatus == "confirmed" ? "Đã xác thực" : "Chưa xác thực")</span>
                    }
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã KH</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Hạng TV</th>
                            <th class="text-end">K-Coin</th>
                            <th>Ngày tham gia</th>
                            <th>Trạng thái email</th>
                            <th class="text-center" style="width: 140px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="text-dark">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                var nguoiDung = item.MaKhNavigation;
                                var hangtv = item.MaHangNavigation;

                                <tr>
                                    <td class="fw-semibold">@item.MaKh</td>
                                    <td>@nguoiDung?.HoTen</td>
                                    <td>@nguoiDung?.Email</td>
                                    <td>@nguoiDung?.DienThoai</td>
                                    <td>
                                        @if (hangtv != null)
                                        {
                                            @($"{hangtv.TenHang} ({hangtv.MaHang})")
                                        }
                                    </td>
                                    <td class="text-end">@item.SoDuKcoin</td>
                                    <td>@item.NgayThamGia.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (nguoiDung != null && nguoiDung.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Đã xác thực</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Chưa xác thực</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.MaKh"
                                               class="btn btn-outline-primary"
                                               title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.MaKh"
                                               class="btn btn-outline-info"
                                               title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                    <div>Chưa có khách hàng nào.</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
