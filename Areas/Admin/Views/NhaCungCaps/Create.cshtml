@model KIDORA.Data.NhaCungCap

@{
    ViewData["Title"] = "Thêm nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-dark">Thêm nhà cung cấp</h1>
        <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <!-- CARD -->
    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Create" asp-area="Admin" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- THÔNG TIN CƠ BẢN -->
                <h5 class="fw-bold text-primary mb-3">Thông tin cơ bản</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Mã nhà cung cấp</label>
                        <input asp-for="MaNcc" class="form-control" />
                        <span asp-validation-for="MaNcc" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Tên nhà cung cấp</label>
                        <input asp-for="TenNcc" class="form-control" />
                        <span asp-validation-for="TenNcc" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Tên người liên hệ</label>
                        <input asp-for="TenLienHe" class="form-control" />
                        <span asp-validation-for="TenLienHe" class="text-danger"></span>
                    </div>
                </div>

                <!-- LIÊN HỆ -->
                <h5 class="fw-bold text-primary mt-4 mb-3">Thông tin liên hệ</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input asp-for="DienThoai" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- ĐỊA CHỈ -->
                <h5 class="fw-bold text-primary mt-4 mb-3">Địa chỉ</h5>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Địa chỉ chi tiết</label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Thành phố</label>
                        <input asp-for="ThanhPho" class="form-control" />
                        <span asp-validation-for="ThanhPho" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Quốc gia</label>
                        <input asp-for="QuocGia" class="form-control" />
                        <span asp-validation-for="QuocGia" class="text-danger"></span>
                    </div>
                </div>

                <!-- THANH TOÁN -->
                <h5 class="fw-bold text-primary mt-4 mb-3">Thanh toán</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Hình thức thanh toán</label>
                        <input asp-for="HinhThucThanhToan" class="form-control" />
                        <span asp-validation-for="HinhThucThanhToan" class="text-danger"></span>
                    </div>
                </div>

                <!-- TRẠNG THÁI -->
                <h5 class="fw-bold text-primary mt-4 mb-3">Trạng thái hợp tác</h5>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" asp-for="ConHopTac" type="checkbox" checked />
                    <label class="form-check-label fw-bold">
                        Còn hợp tác với nhà cung cấp
                    </label>
                </div>

                <!-- BUTTON -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">
                        Hủy
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
