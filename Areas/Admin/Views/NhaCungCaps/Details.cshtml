@model KIDORA.Data.NhaCungCap

@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h2 text-dark mb-1">Chi tiết nhà cung cấp</h1>
            <div class="text-muted">
                Tên NCC: <strong>@Model.TenNcc</strong>
            </div>
        </div>
        <a class="btn btn-secondary"
           asp-area="Admin"
           asp-controller="NhaCungCaps"
           asp-action="Index">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <!-- CARD THÔNG TIN -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-4">

                <!-- CỘT TRÁI -->
                <div class="col-lg-6">
                    <h5 class="fw-bold text-dark mb-3">Thông tin nhà cung cấp</h5>

                    <dl class="row mb-0 text-dark">
                        <dt class="col-sm-5">Tên nhà cung cấp</dt>
                        <dd class="col-sm-7">@Model.TenNcc</dd>

                        <dt class="col-sm-5">Tên người liên hệ</dt>
                        <dd class="col-sm-7">@Model.TenLienHe</dd>

                        <dt class="col-sm-5">Số điện thoại</dt>
                        <dd class="col-sm-7">@Model.DienThoai</dd>

                        <dt class="col-sm-5">Email</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Hình thức thanh toán</dt>
                        <dd class="col-sm-7">@Model.HinhThucThanhToan</dd>
                    </dl>
                </div>

                <!-- CỘT PHẢI -->
                <div class="col-lg-6">
                    <h5 class="fw-bold text-dark mb-3">Địa chỉ & trạng thái</h5>

                    <dl class="row mb-0 text-dark">
                        <dt class="col-sm-5">Địa chỉ</dt>
                        <dd class="col-sm-7">@Model.DiaChi</dd>

                        <dt class="col-sm-5">Thành phố</dt>
                        <dd class="col-sm-7">@Model.ThanhPho</dd>

                        <dt class="col-sm-5">Quốc gia</dt>
                        <dd class="col-sm-7">@Model.QuocGia</dd>

                        <dt class="col-sm-5">Trạng thái hợp tác</dt>
                        <dd class="col-sm-7">
                            @{
                                var badgeClass = Model.ConHopTac ? "bg-success" : "bg-danger";
                                var badgeText = Model.ConHopTac ? "ĐANG HỢP TÁC" : "ĐÃ DỪNG";
                            }
                            <span class="badge @badgeClass">@badgeText</span>
                        </dd>
                    </dl>
                </div>

            </div>
        </div>
    </div>

    <!-- ACTION -->
    <div class="mt-3">
        <a asp-action="Edit"
           asp-area="Admin"
           asp-route-id="@Model.MaNcc"
           class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>

        <a asp-action="Index"
           asp-area="Admin"
           class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

</div>
