@model KIDORA.Data.NhaCungCap

@{
    ViewData["Title"] = "Chỉnh Sửa Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-4">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumb-dash mb-4" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="NhaCungCaps" asp-action="Index">
                            Quản lý Nhà Cung Cấp
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Chỉnh sửa
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-dark">Chỉnh Sửa Nhà Cung Cấp</h1>
    </div>

    @* Bắt đầu Card để bao bọc Form *@
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i> Thông tin cơ bản</h5>
        </div>

        <div class="card-body">

            <form asp-action="Edit" asp-area="Admin">
              @*   @* Hiển thị lỗi tổng thể *@
              @*   <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>  *@

                @* Input ẩn cho ID (MaNcc) *@
                <input type="hidden" asp-for="MaNcc" />

                @* Bố cục lưới 2 cột *@
                <div class="row">

                    @* Tên Nhà Cung Cấp *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenNcc" class="form-label fw-bold"></label>
                        <input asp-for="TenNcc" class="form-control" />
                        <span asp-validation-for="TenNcc" class="text-danger small"></span>
                    </div>

                    @* Tên Liên Hệ *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenLienHe" class="form-label fw-bold"></label>
                        <input asp-for="TenLienHe" class="form-control" />
                        <span asp-validation-for="TenLienHe" class="text-danger small"></span>
                    </div>

                    @* Điện Thoại *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="DienThoai" class="form-label"></label>
                        <input asp-for="DienThoai" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger small"></span>
                    </div>

                    @* Email *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    @* Địa Chỉ *@
                    <div class="col-md-12 mb-3">
                        <label asp-for="DiaChi" class="form-label"></label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger small"></span>
                    </div>

                    @* Thành Phố *@
                    <div class="col-md-4 mb-3">
                        <label asp-for="ThanhPho" class="form-label"></label>
                        <input asp-for="ThanhPho" class="form-control" />
                        <span asp-validation-for="ThanhPho" class="text-danger small"></span>
                    </div>

                    @* Quốc Gia *@
                    <div class="col-md-4 mb-3">
                        <label asp-for="QuocGia" class="form-label"></label>
                        <input asp-for="QuocGia" class="form-control" />
                        <span asp-validation-for="QuocGia" class="text-danger small"></span>
                    </div>

                    @* Hình Thức Thanh Toán *@
                    <div class="col-md-4 mb-3">
                        <label asp-for="HinhThucThanhToan" class="form-label"></label>
                        <input asp-for="HinhThucThanhToan" class="form-control" />
                        <span asp-validation-for="HinhThucThanhToan" class="text-danger small"></span>
                    </div>

                    @* Còn Hợp Tác (Checkbox) *@
                    <div class="col-md-12 mb-3">
                        <div class="form-check form-switch mt-3">
                            <input class="form-check-input" type="checkbox" role="switch" id="ConHopTacSwitch" asp-for="ConHopTac">
                            <label class="form-check-label fw-bold" for="ConHopTacSwitch">
                                @Html.DisplayNameFor(model => model.ConHopTac)
                            </label>
                        </div>
                    </div>

                </div>

                <hr />

                @* Nút Hành động *@
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
