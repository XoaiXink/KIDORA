@model IEnumerable<KIDORA.Data.NhaCungCap>

@{
    ViewData["Title"] = "Quản lý nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int rowNumber = 1;
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h2 text-dark">Danh sách Nhà Cung Cấp</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm mới nhà cung cấp
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">#</th>
                            <th>@Html.DisplayNameFor(model => model.TenNcc)</th>
                            <th>@Html.DisplayNameFor(model => model.TenLienHe)</th>
                            <th>@Html.DisplayNameFor(model => model.DienThoai)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                            <th>@Html.DisplayNameFor(model => model.QuocGia)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.ConHopTac)</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* Dòng này đã được sửa để sử dụng biến đã khai báo và TĂNG giá trị *@
                                <td class="text-center">@(rowNumber++)</td>

                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.TenNcc)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenLienHe)</td>
                                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                <td class="text-break">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="small text-muted">@Html.DisplayFor(modelItem => item.DiaChi), @Html.DisplayFor(modelItem => item.ThanhPho)</td>
                                <td>@Html.DisplayFor(modelItem => item.QuocGia)</td>

                                <td class="text-center">
                                    @{
                                        var badgeClass = item.ConHopTac ? "bg-success" : "bg-danger";
                                        var badgeText = item.ConHopTac ? "Đang Hợp tác" : "Đã Dừng";
                                    }
                                    <span class="badge @badgeClass p-2">@badgeText</span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">

                                        <a asp-action="Edit" asp-controller="NhaCungCaps"  asp-area="Admin" asp-route-id="@item.MaNcc"
                                           class="btn btn-outline-primary"
                                           title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Details" asp-controller="NhaCungCaps" asp-area="Admin" asp-route-id="@item.MaNcc"
                                           class="btn btn-outline-info"
                                           title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>

                                        <a asp-action="Delete" asp-controller="NhaCungCaps" asp-area="Admin" asp-route-id="@item.MaNcc"
                                           class="btn btn-outline-danger"
                                           title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
