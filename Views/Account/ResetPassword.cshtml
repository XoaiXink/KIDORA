@model string

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<!-- FIX CHE HEADER -->
<div style="height:140px;"></div>
<div class="container" style="margin-top:140px; margin-bottom:60px;">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow border-0">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4" style="color:var(--kidora-blue); font-weight:700;">
                        Đặt lại mật khẩu
                    </h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form method="post">
                        <input type="hidden" name="token" value="@Model" />

                        <div class="mb-3">
                            <label>Mật khẩu mới</label>
                            <input type="password" name="newPass" class="form-control p-3" required />
                        </div>

                        <div class="mb-3">
                            <label>Nhập lại mật khẩu</label>
                            <input type="password" name="confirmPass" class="form-control p-3" required />
                        </div>

                        <button type="submit" class="btn w-100 p-3"
                                style="background:var(--kidora-blue); color:white; font-weight:600;">
                            Xác nhận
                        </button>

                        <p class="text-center mt-3">
                            <a asp-controller="Account" asp-action="Login"
                               style="color:var(--kidora-blue); font-weight:600;">
                                Quay lại đăng nhập
                            </a>
                        </p>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
