@model IEnumerable<KIDORA.ViewModels.SanPhamGioHang>
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Giỏ hàng</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item active text-white">Giỏ hàng</li>
    </ol>
</div>

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                        <th>Xử lý</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-masp="@item.MaSp">
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="~/customerassets/img/Anh/@item.AnhChinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" />
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4"> 
                                    <a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@item.MaSp">
                                        @item.TenSp
                                    </a>
                                </p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@item.DonGiaBan.ToString("N0") VND</p>
                            </td>
                            <td>
                                <div class="input-group quantity mt-4" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-minus rounded-circle bg-light border" data-action="decrease">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>

                                    <input type="text"
                                           class="form-control form-control-sm text-center border-0 cart-qty"
                                           value="@item.SoLuong" />

                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-plus rounded-circle bg-light border" data-action="increase">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">
                                    <span id="subtotal-@item.MaSp">@item.ThanhTien.ToString("N0")</span> VND
                                </p>
                            </td>
                            <td>
                                <a asp-controller="GioHang" asp-action="XoaGioHang" asp-route-id="@item.MaSp"
                                   class="btn btn-md rounded-circle bg-light border mt-4">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="row g-4 justify-content-end">
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Giỏ hàng <span class="fw-normal"></span></h1>

                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Tổng tiền:</h5>
                            <p class="mb-0">
                                <span id="cart-subtotal">@Model.Sum(p => p.ThanhTien).ToString("N0")</span> VND
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a asp-action="ThanhToan"
           asp-controller="GioHang"
           class="btn-thanhtoan">
            Tiến hành thanh toán
        </a>


    </div>
</div>
<style>
    .btn-thanhtoan {
        display: inline-block;
        font-size: 22px; /* 👈 font 22 */
        font-weight: 600;
        padding: 14px 28px;
        margin-left: 24px; /* 👈 dịch sang phải */

        color: black;
        background-color: transparent;
        border: 2px solid ;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.25s ease;
    }

</style>
@section Scripts {
    <script>
                document.addEventListener("click", function (e) {

            const btn = e.target.closest("button.btn-minus, button.btn-plus");
            if (!btn) return; // Nếu không phải nút, thoát

            const row = btn.closest("tr");
            const id = row.dataset.masp;
            const qtyInput = row.querySelector(".cart-qty");

            let qty = parseInt(qtyInput.value);

            if (btn.classList.contains("btn-plus")) qty++;
            if (btn.classList.contains("btn-minus")) qty = Math.max(1, qty - 1);

            qtyInput.value = qty;

            updateQuantity(id, qty, row);
        });

        function updateQuantity(id, quantity, row) {
            fetch("/GioHang/UpdateQuantity", {
                method: "POST",
                headers: { "Content-Type": "application/x-www-form-urlencoded" },
                body: `id=${id}&quantity=${quantity}`
            })
            .then(r => r.json())
            .then(res => {
                if (res.success) {

                    // Cập nhật subtotal từng sản phẩm
                    row.querySelector("#subtotal-" + id).innerText =
                        res.subtotal.toLocaleString();

                    // Cập nhật tổng giỏ hàng
                    document.getElementById("cart-subtotal").innerText =
                        res.cartTotal.toLocaleString();
                }
            });
        }
    </script>
}
