@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var maDonHang = TempData["MaDonHang"]?.ToString();
    var maTraCuu = TempData["MaTraCuu"]?.ToString();
    var tongCong = TempData["TongCong"]?.ToString();
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5" style="background: linear-gradient(135deg, #28a745, #20c997);">
    <h1 class="text-center text-white display-6">
        <i class="fa fa-check-circle me-2"></i> Đặt hàng thành công!
    </h1>
</div>
<!-- Single Page Header End -->

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>

                    <h2 class="text-success mb-3">Cảm ơn bạn đã đặt hàng!</h2>
                    <p class="text-muted mb-4">
                        Đơn hàng của bạn đã được tiếp nhận và đang chờ xác nhận từ cửa hàng.
                    </p>

                    @if (!string.IsNullOrEmpty(maDonHang))
                    {
                        <div class="bg-light rounded p-4 mb-4">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <small class="text-muted d-block">Mã đơn hàng</small>
                                    <strong class="fs-5 text-primary">@maDonHang</strong>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <small class="text-muted d-block">Mã tra cứu</small>
                                    <strong class="fs-5">@maTraCuu</strong>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <small class="text-muted d-block">Tổng tiền</small>
                                    <strong class="fs-5 text-danger">@tongCong đ</strong>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info text-start">
                            <i class="fa fa-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Vui lòng ghi nhớ mã đơn hàng <strong>@maDonHang</strong>
                            hoặc mã tra cứu <strong>@maTraCuu</strong> để theo dõi tình trạng đơn hàng.
                        </div>
                    }

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-controller="TrangChu" asp-action="Index" class="btn btn-outline-primary px-4 py-2">
                            <i class="fa fa-home me-2"></i> Về trang chủ
                        </a>
                        <a asp-controller="SanPham" asp-action="Index" class="btn btn-primary px-4 py-2">
                            <i class="fa fa-shopping-bag me-2"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>

            <!-- Thông tin liên hệ -->
            <div class="text-center mt-4">
                <p class="text-muted mb-2">Nếu có thắc mắc, vui lòng liên hệ:</p>
                <p>
                    <i class="fa fa-phone me-2 text-primary"></i> Hotline: <strong>1900 1234</strong>
                    <span class="mx-3">|</span>
                    <i class="fa fa-envelope me-2 text-primary"></i> Email: <strong>support@kidora.vn</strong>
                </p>
            </div>
        </div>
    </div>
</div>
