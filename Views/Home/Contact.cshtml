
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
body {
    padding-top: 72px;
}

.page-header {
    margin-top: 0;
}

<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                   
                </div>
                <div class="col-lg-12">
                    <div class="w-100 rounded overflow-hidden" style="height: 400px;">
                        <iframe class="w-100 h-100"
                                style="border:0;"
                                loading="lazy"
                                allowfullscreen=""
                                referrerpolicy="no-referrer-when-downgrade"
                                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d26089.727095611754!2d106.6776311!3d10.7665543!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1ca1269637%3A0x968a1f1dd12906ec!2zNTUgTmd1eeG7hW4gVHLDo2ksIFBoxrDhu51uZyAyLCBRdeG6rW4gNSwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5o!5e1!3m2!1svi!2s!4v1764488201096!5m2!1svi!2s">
                        </iframe>
                    </div>

                </div>
                <div class="col-lg-7">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <form asp-action="Contact" method="post" class="">
                        @Html.AntiForgeryToken()
                        <input type="text" name="name" class="w-100 form-control border-0 py-3 mb-4" placeholder="Nhập tên của bạn" required>
                        <input type="email" name="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Nhập email của bạn" required>
                        <textarea name="message" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Ghi chú" required></textarea>
                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Gửi</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">55 Nguyễn Trãi, Quận 5, TP.HCM</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email </h4>
                            <p class="mb-2">shopkidora@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Liên lạc</h4>
                            <p class="mb-2">0909 123 456</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
