<!-- FIX CHE HEADER -->
<div style="height:160px;"></div>
<div class="container" style="margin-top:140px; margin-bottom:60px;">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h3 class="mb-4" style="color:var(--kidora-blue); font-weight:700;">Đổi mật khẩu</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post">

                <div class="mb-3">
                    <label>Mật khẩu cũ</label>
                    <input type="password" name="oldPass" class="form-control p-3" required />
                </div>

                <div class="mb-3">
                    <label>Mật khẩu mới</label>
                    <input type="password" name="newPass" class="form-control p-3" required />
                </div>

                <div class="mb-3">
                    <label>Xác nhận mật khẩu mới</label>
                    <input type="password" name="confirmPass" class="form-control p-3" required />
                </div>

                <button type="submit" class="btn w-100 p-3"
                        style="background:var(--kidora-blue); color:white; font-weight:600;">
                    Xác nhận đổi mật khẩu
                </button>

            </form>

        </div>
    </div>
</div>
