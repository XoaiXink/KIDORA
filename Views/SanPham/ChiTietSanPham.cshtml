@model KIDORA.ViewModels.ChiTietSanPhamVM
@{
    ViewData["Title"] = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Chi tiết sản phẩm</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="SanPham" asp-action="Index">Sản phẩm</a></li>
        <li class="breadcrumb-item active text-white">@Model.TenSp</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Single Product Start -->
<div class="container-fluid py-5 mt-5 page-product"
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-9">
                <div class="row g-4">
                    <!-- ẢNH SẢN PHẨM -->
                    <div class="col-lg-6">
                        <div class="border rounded p-3">
                            <img id="mainImage"
                                 src="~/Anh/@Model.AnhSanPhams.FirstOrDefault()"
                                 class="img-fluid rounded mb-3"
                                 alt="@Model.TenSp" />

                            <div class="d-flex gap-2 flex-wrap justify-content-center">
                                @foreach (var img in Model.AnhSanPhams)
                                {
                                    <img src="~/Anh/@img"
                                         class="border rounded"
                                         style="width:70px;height:70px;object-fit:cover;cursor:pointer"
                                         onclick="changeImage('@img')" />
                                }
                            </div>
                        </div>
                    </div>

                    <!-- THÔNG TIN -->
                    <div class="col-lg-6">
                        <h4 class="fw-bold mb-3">@Model.TenSp</h4>
                        <p class="mb-2">Danh mục: <strong>@Model.TenDanhMuc</strong></p>
                        <p class="mb-2">Số lượng tồn: <strong>@Model.SoLuongTon</strong></p>

                        <h5 class="fw-bold mb-3 text-danger" id="giaHienThi">
                            @Model.DonGiaBan.ToString("N0") đ
                        </h5>

                        @if (Model.BienThes.Any())
                        {
                            <label class="fw-bold">Chọn biến thể</label>
                            <select class="form-select mb-3" id="variantSelect">
                                @foreach (var bt in Model.BienThes)
                                {
                                    <option value="@bt.MaBienThe"
                                            data-gia="@bt.GiaBan"
                                            data-anh="@bt.AnhBienThe.FirstOrDefault()">
                                        @bt.TenBienThe
                                    </option>
                                }
                            </select>
                        }

                        <!-- ĐÁNH GIÁ -->
                        <div class="d-flex mb-3">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-star text-muted"></i>
                        </div>

                        <p class="mb-4">@Model.MoTaNgan</p>

                        <!-- ADD TO CART -->
                        <form asp-action="AddToCart"
                              asp-controller="GioHang"
                              asp-route-id="@Model.MaSp">
                            <div class="input-group quantity mb-4" style="width: 120px;">
                                <button class="btn btn-sm btn-outline-primary rounded-circle" type="button">−</button>
                                <input type="text" class="form-control form-control-sm text-center" value="1" name="quantity">
                                <button class="btn btn-sm btn-outline-primary rounded-circle" type="button">+</button>
                            </div>

                            <button class="btn btn-outline-primary rounded-pill px-4 py-2">
                                <i class="fa fa-shopping-bag me-2"></i> Add to cart
                            </button>
                        </form>
                    </div>

                    <!-- TAB -->
                    <div class="col-lg-12 mt-5">
                        <ul class="nav nav-tabs mb-3">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-info">
                                    Thông tin hàng hóa
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-review">
                                    Đánh giá
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-info">
                                @Html.Raw(Model.MoTaChiTiet)
                            </div>

                            <div class="tab-pane fade" id="tab-review">
                                <p class="text-muted">Chưa có đánh giá.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SIDEBAR -->
            <div class="col-lg-4 col-xl-3">
                <div class="input-group mb-4">
                    <input type="search" class="form-control p-3" placeholder="Tìm kiếm...">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fa fa-search"></i>
                    </span>
                </div>

                @await Component.InvokeAsync("MenuDanhMuc")

                <div class="mt-4 position-relative">
                    <img src="/img/banner-fruits.jpg" class="img-fluid rounded">
                    <h3 class="position-absolute text-primary fw-bold"
                        style="top:50%;right:15px;transform:translateY(-50%)">
                        Đồ chơi<br>Trẻ em<br>An toàn
                    </h3>
                </div>
            </div>
        </div>

        <!-- SẢN PHẨM LIÊN QUAN -->
        @if (ViewBag.RelatedProducts != null)
        {
            var relatedProducts = ViewBag.RelatedProducts as List<KIDORA.ViewModels.ListSanPhamVM>;
            <h2 class="fw-bold mb-4">Sản phẩm liên quan</h2>

            <div class="row g-4">
                @foreach (var item in relatedProducts)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="border border-primary rounded p-3 h-100">
                            <a asp-controller="SanPham" asp-action="ChiTietSanPham"
                               asp-route-id="@item.MaSp"
                               class="text-decoration-none text-dark">
                                <img src="~/Anh/@item.AnhChinh"
                                     class="img-fluid rounded mb-2"
                                     style="height:200px;object-fit:cover">
                                <h6>@item.TenSp</h6>
                                <p class="text-danger fw-bold">
                                    @item.DonGiaBan.ToString("N0") VND
                                </p>
                            </a>
                            <a asp-controller="GioHang"
                               asp-action="AddToCart"
                               asp-route-id="@item.MaSp"
                               class="btn btn-outline-primary w-100 rounded-pill">
                                <i class="fa fa-shopping-bag me-2"></i> Add to cart
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<script>
    function changeImage(img) {
        document.getElementById("mainImage").src = '/Anh/' + img;
    }

    document.getElementById("variantSelect")?.addEventListener("change", function () {
        const opt = this.selectedOptions[0];
        const gia = opt.dataset.gia;
        document.getElementById("giaHienThi").innerText =
            Number(gia).toLocaleString('vi-VN') + ' đ';

        if (opt.dataset.anh) {
            document.getElementById("mainImage").src = '/Anh/' + opt.dataset.anh;
        }
    });
</script>
