@model IEnumerable<KIDORA.ViewModels.MenuDanhMucVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>

        <ul class="list-unstyled fruite-categorie">

            @foreach (var parent in Model)
            {
                <li>
                    <!-- DANH MỤC CHA -->
                    <div class="d-flex justify-content-between fruite-name">
                        <a href="/SanPham?danhmuc=@parent.MaDanhMuc">
                            <i class="fas fa-folder-open me-2"></i>
                            @parent.TenDanhMuc
                        </a>
                        <span>(@parent.SoLuongSanPham)</span>
                    </div>

                    <!-- DANH MỤC CON -->
                    @if (parent.DanhMucCon != null && parent.DanhMucCon.Any())
                    {
                        <ul class="list-unstyled ms-4 mt-2">

                            @foreach (var child in parent.DanhMucCon)
                            {
                                <li>
                                    <div class="d-flex justify-content-between fruite-name">
                                        <a href="/SanPham?danhmuc=@child.MaDanhMuc">
                                            <i class="fas fa-angle-right me-2"></i>
                                            @child.TenDanhMuc
                                        </a>
                                        <span>(@child.SoLuongSanPham)</span>
                                    </div>
                                </li>
                            }

                        </ul>
                    }

                </li>
            }

        </ul>
    </div>
</div>
